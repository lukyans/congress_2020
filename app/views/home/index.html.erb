<div class="conntainer p-5">
  <nav class="navbar navbar-default" role="navigation">
    <div class=" navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <%= form_tag :search, method: :get, class: "form-inline" do %>
          <div class="form-group search-field">
            <%= select_tag :state, options_for_select(us_states) %>
            <%= submit_tag "Locate Members of the House", class: "btn btn-primary ml-3" %>
          </div>
        <% end %>
      </ul>
    </div>
  </nav>
</div>


<div class="container">
  <div class="row">
    <div class="container h1"><%= @current_state_members.try(:count) %> Results</div>
    <% @current_state_members.try(:each) do |current_state_member| %>
      <div class="col-4 mt-3">
        <div class="card bg-dark text-white" style="width: 18rem;">
          <div class="card-body">
            <ul class="current_state_member">
              <li class="name">
                <h5 class="card-title"><%= current_state_member[:name] %></h5>
              </li>
              <li class="role">
                <p class="card-text">Role: <%= current_state_member[:role] %></p>
              </li>
              <li class="gender">
                <p class="card-text">Gender: <%= current_state_member[:gender] %></p>
              </li>
              <li class="party">
                <p class="card-text">Party: <%= current_state_member[:party] %></p>
              </li>
              <li class="facebook">
                <p class="card-text">Facebook: <%= current_state_member[:facebook_account] %></p>
              </li>
              <li class="youtube">
                <p class="card-text">Youtube: <%= current_state_member[:youtube_id] %></p>
              </li>
              <li class="seniority">
                <p class="card-text">Seniority: <%= current_state_member[:seniority] %></p>
              </li>
              <li class="next_election">
                <p class="card-text">Next Election: <%= current_state_member[:next_election] %></p>
              </li>
              <li class="api_uri">
                <p class="card-text">API URI: <%= current_state_member[:api_uri] %></p>
              </li>
              <li class="district">
                <p class="card-text">District: <%= current_state_member[:district] %></p>
              </li>
              <li class="at_large">
                <p class="card-text">At-large: <%= current_state_member[:at_large] %></p>
              </li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
